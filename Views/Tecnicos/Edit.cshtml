@model pedidos_dap5.Models.Pedido

@{
    ViewData["Title"] = "Edit";
}



<h4>Actualizar ticket</h4>

<div class="row">
    <div class="col-12">
        <form asp-action="Edit">
            <div class="pedidotecnico">
                <div class="form-group">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                  <label asp-for="Idpedido" class="control-label"> Nro. De ticket</label>
                <input type="text" class="form-control" asp-for="Idpedido" readonly />
                </div>
                <div class="form-group">
                    <label asp-for="Usuario" class="control-label"></label>
                    <input type="text" asp-for="Usuario" class="form-control" value="@ViewBag.Usuario" readonly />

                    <span asp-validation-for="Usuario" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Tecnico" class="control-label"></label>
                    <input type="text" asp-for="Tecnico" class="form-control" value="@ViewBag.Tecnico" readonly />
                    <span asp-validation-for="Tecnico" class="text-danger"></span>
                </div>
                <div class="form-group editarestado">
                    <label asp-for="Estado" class="control-label"></label>
                    <select asp-for="Estado" id="ddlEstados" class="form-control" asp-items="ViewBag.Estado" onchange="showSolution()"></select>
                    <span asp-validation-for="Estado" class="text-danger"></span>
                 </div>
            </div>
            
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label"></label>
                <textarea asp-for="Descripcion" class="form-control" readonly></textarea>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>

            <div class="form-group d-none" id="divSolucion" >
                <label class="control-label">Solucion</label>
                <textarea class="form-control" name="textSolucion"></textarea>
              @*  <span asp-validation-for="Soluciones" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <label asp-for="FechaInicio" class="control-label"></label>
                <input asp-for="FechaInicio" class="form-control" readonly />
                <span asp-validation-for="FechaInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Actualizar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
