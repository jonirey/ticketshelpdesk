@model IEnumerable<pedidos_dap5.Models.ViewModels.ViewModelPedido>

@{
    ViewData["Title"] = "Index";
}

<table class="table">
    <thead>
        <tr>
            <th>
                Nro. de ticket.
            </th>
            <th>
               Descripcion
            </th>
            <th>
            Usuario
            </th>
            <th>
                Tecnico
            </th>
            <th>
               Estado
            </th>
            <th>
              Fecha de Inicio
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Idpedido)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion_pedido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Usuario1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tecnico1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion_estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaInicio)
            </td>
            <td>
                 @if (item.Descripcion_estado == "Abierto")
                 {
                     <a asp-action="Take" asp-route-id="@item.Idpedido">Tomar/asignar</a>
                 }
            </td>
        </tr>
}
    </tbody>
</table>
