
@using pedidos_dap5.Services;


@{

    TraerPersonas personas = new TraerPersonas();
    int tec = 0;
    tec = personas.existetecnico();
    int usuario = 0;
    usuario = personas.existeusuario();

    string nombreusuario = personas.Name();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Tickets Departamento Sistemas</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/pedidos_dap5.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
   
</head>
<body>
    <div class="d-flex" id="content-wrapper">
        <div id="sidebar-container" class="bg-primary">
            <div class="logo">
                <h4 class="text-light font-weight-bold mb-0">Tickets dap5</h4>
            </div>
            <div class="menu">
            
                @if(tec!=0){
                <a asp-controller="Tecnicos" asp-action="Index" class="d-block text-light p-3 border-0">
                    <i class="icon ion-md-apps lead mr-2"></i>
                   TOMAR TICKETS
                </a>

                <a asp-controller="Tecnicos" asp-action="PedidosXTecnico" class="d-block text-light p-3 border-0">
                    <i class="icon ion-md-people lead mr-2"></i>
                   VER MIS TICKETS
                </a>

              @*  <a href="#" class="d-block text-light p-3 border-0">
                    <i class="icon ion-md-stats lead mr-2"></i>
                    Estadísticas
                </a>*@
                }
                else
                {
                    <a asp-controller="Pedidos" asp-action="Index" class="d-block text-light p-3 border-0">
                        <i class="icon ion-md-people lead mr-2"></i>
                        VER MIS TICKETS
                    </a>

                }
                @*    <a href="#" class="d-block text-light p-3 border-0">
                    <i class="icon ion-md-settings lead mr-2"></i>
                    Configuración
                </a>*@
            </div>
        </div>
        
    
        <div class="container mt-1">
            <section class=" bg-clear py-3">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-9 col-md-8">
                            
                            <h2 class="font-weight-bold mb-0">Bienvenido @nombreusuario </h2>
                            <p class="lead text-muted">Tickets del Departamento Sistemas</p>
                        </div>
                        <div class="col-lg-3 col-md-4 d-flex">
                            <button class="btn btn-primary w-100 align-self-center" data-url="/Pedidos/Create" onclick="mostrarFormulario(this)">Nuevo ticket</button>
                           
                        </div>
                    </div>
                </div>
            </section>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    </div>
  @*  <footer class="footer text-muted">
        <div class="container mx-auto">
            &copy; 2022 - Departamento Sistemas  - Dirección de Personal de la Armada 
        </div>
    </footer>*@
    <script src="~/lib/jquery/dist/jquery.min.js" ></script>
     <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
